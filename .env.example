# Dental AI Treatment Planner - Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# Model Configuration
# ============================================================================

# Path to YOLOv11 dental model weights
DENTAL_MODEL_PATH=data/models/dental_yolo.pt

# Detection confidence threshold (0.1 - 0.9)
CONFIDENCE_THRESHOLD=0.25

# Device for inference: 'cpu', 'cuda', 'mps', or 'auto'
INFERENCE_DEVICE=auto

# ============================================================================
# RAG Configuration
# ============================================================================

# Embedding model for RAG
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector store persistence directory (optional)
CHROMA_PERSIST_DIR=data/chroma_db

# OpenAI API key (if using OpenAI embeddings)
# OPENAI_API_KEY=your-api-key-here

# ============================================================================
# API Configuration
# ============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Gradio demo settings
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860
GRADIO_SHARE=false

# ============================================================================
# MCP Server Configuration
# ============================================================================

# MCP transport type: 'stdio' or 'streamable_http'
MCP_TRANSPORT=stdio
MCP_HTTP_PORT=8001

# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FILE=logs/dental_ai.log
